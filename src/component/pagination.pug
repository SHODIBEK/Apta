mixin pagination(data)
    - data = data || {}

    .pagination 
        ul.pagination__items
            - for(var i = 0; i < 3; i++) {
                li.pagination__item(class!=(i === 0) ? 'pagination__item--active' : '')
                    a(href="#").pagination__link!=(i+1)
            - }
            li.pagination__item 
                    .pagination__link
                        | ...
            li.pagination__item 
                    a(href="#").pagination__link
                        | 5