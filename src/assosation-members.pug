extends pug/base

append vars
    - title = 'О нас'
    - titlePage = 'Члены ассоциации'
    - body.classList = 'inner-page'
    - defaultLink = 'javascript:void(0);'
    -
        var filters = [
            {
                name: 'travel',
                class: 'турфирмы',
                images: ['logo-1', 'logo-2', 'logo-3', 'logo-4', 'logo-5']
            },
            {
                name: 'hotels',
                class: 'гостиницы',
                images: ['logo-5', 'logo-4', 'logo-3', 'logo-2', 'logo-1']
            },
            {
                name: 'houses',
                class: 'гостевые дома',
                images: ['logo-3', 'logo-4', 'logo-2', 'logo-5', 'logo-3']
            },
        ]
block content
    +header()
    // Контент
    section.main.assosation-page(data-aos="fade-up" data-aos-delay="200")
        .main__wrapper
            .assosation-members__bg(style="background-image: url('./images/slider-1.jpg')" data-aos="fade-up" data-aos-delay="300")
            .title
                .container
                    h1.title__name(data-aos="fade-up" data-aos-delay="400")!=titlePage
            .white-wrapper
                .main-content
                    //- +aside(sidebar)
                    .content(data-aos="fade-up" data-aos-delay="400")
                        .cd-tab-filter-wrapper
                            .cd-tab-filter
                                ul.cd-filters
                                    li.placeholder 
                                        a(data-filter="all" data-mobile="Выбрать..." href!=defaultLink)
                                            | ВСЕ
                                    li.filter
                                        a(href!=defaultLink data-filter="all")
                                            | ВСЕ
                                    each item, i in filters
                                        li.filter(data-filter=`.${item.name}` data-aos="fade-up" data-aos-delay=`${i+2}00`)
                                            a(href!=defaultLink data-type=!item.name)!=item.class
                        section.cd-gallery
                            .container
                                ul.cd-gallery__lists
                                    each item in filters
                                        each pic, i in item.images
                                            li.cd-gallery__list.mix(class!=item.name)
                                                a(href="#").cd-gallery__link 
                                                    img(src=`./images/logos/${pic}.png` alt="").cd-gallery__img
                                    <li><!-- ... --></li>
                                    <li class="gap"></li>
            .banner(data-aos="fade-up" data-aos-delay="200")
                .container
                    .banner__block
                        img(src="./images/banner.jpg", alt="").banner__image
    +footer()